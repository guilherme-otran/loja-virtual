<div class="container-cart">
  <h4><%= t(:'cart.cart') %></h4>
  <div class="cart">
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th>#</th>
          <!-- <th><%= Product.human_attribute_name(:code) %></th> -->
          <th><%= Product.human_attribute_name(:description) %></th>
          <th><%= t(:'cart.count') %></th>
          <th><%= Product.human_attribute_name(:price)%></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% products.each do |product| %>
          <tr>
            <th>
              <%= product_number(product) %>
            </th>
            <!-- <td>
              <%= product.code  %>
            </td> -->
            <td>
              <%= product.description %>
            </td>
            <td>
              <div align="center">
              <input  type="text"
                      value="<%= product_quantity(product) %>" 
                      class="txt-product-quantity" 
                      data-id="<%= product_number(product)%>"      
                      data-path="<%=change_quantity_product_path(product)%>"
                      data-invalid-value="<%= t(:'cart.quantity.invalid') %>">
              </input>
              </div>

            </td>
            <td>
              <%= number_to_currency product_price(product) %>
            </td>
            <td>
              <%= link_to ('<i class="icon-remove"></i> ').html_safe(),
                remove_from_cart_product_path(product),
                :class => 'btn-remove-from-cart',
                :data => {id: product.id}
              %>
            </td>
          </tr>
        <% end %>
        <tr>
          <td colspan=5 class="cart-total"> <label class="label-total"> <%= t(:"cart.total") %> </label> <%= number_to_currency(cart.total_value) %> </td>
        </tr>
      </tbody>
    </table>
  </div>
  <button class="btn btn-info"> <%= t(:'cart.finish') %> </button>
</div>
