<% @products.each do |product| %>
  <tr>
    <td><%= product.code %></td>
    <td><%= product.description %></td>
    <td><%= number_to_currency(product.price) %></td>
    <td><%= product.category.name %></td>
    <td>  
      <%= link_to ('<i class="icon-share"></i> ').html_safe, # + t(:show)).html_safe, 
                    admin_product_path(product), :class => 'btn' %> </td>
    <td>
      <%= link_to ('<i class="icon-edit icon-white"></i> ').html_safe,# + t(:edit)).html_safe, 
                    edit_admin_product_path(product), :class => 'btn btn-info' %> </td>
    <td>
      <%= link_to ('<i class="icon-remove icon-white"></i> ').html_safe, # + t(:delete)).html_safe, 
                    admin_product_path(product), 
                    method: :delete, 
                    data: { confirm: t(:'notice.are_you_sure') }, 
                    :class => 'btn btn-danger' %>
    </td>
  </tr>
<% end %>