<%= simple_form_for([:admin, @product], :html => {:multipart => true}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :code %>
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.select :category_id, Category.all.collect { |c| [c.name, c.id] } %>
  </div>

	

  <div class"form-image">
	 <p>
	    <%= f.file_field :image %>
	  </p>
	</div>

	

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
