<%= simple_form_for([:admin, @product], :html => {:multipart => true}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :code %>
    <%= f.input :description, :as => :text, :input_html => { :rows => 3 } %>     
    <%= f.input :price %>
    <label><%= t(:'activerecord.models.category') %></label> <p> <%= f.select :category_id, Category.all.collect { |c| [c.name, c.id] } %>
  </div>

  <div class"form-image">
	 <p>     
	   <%= f.file_field :image %>
	 </p>
	</div>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn btn-primary' %>
    <%= link_to t(:cancel), admin_products_path, :class => 'btn' %>
  </div>
<% end %>
