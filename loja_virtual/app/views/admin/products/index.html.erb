<h1><%= t(:'products.list') %> </h1>

<table class="table table-bordered table-hover">
  <thead>
    <th> <%= Product.human_attribute_name(:code) %> </th>
    <th> <%= Product.human_attribute_name(:description) %> </th>
    <th> <%= Product.human_attribute_name(:price) %> </th>
    <th> <%= Product.human_attribute_name(:category) %> </th>
    <th colspan=3></th>
  </thead>

  <tbody  class="sortable">
  <% @products.each do |product| %>
    <tr>
      <td><%= product.code %></td>
      <td><%= product.description %></td>
      <td><%= number_to_currency(product.price) %></td>
      <td><%= product.category.name %></td>
  
      <td>
        <div align="center">  
          <%= link_to ('<i class="icon-share"></i> ').html_safe, 
                        admin_product_path(product), :class => 'btn' %> 
        </div> 
      </td>
      <td>
        <div align="center">
          <%= link_to ('<i class="icon-edit icon-white"></i> ').html_safe, 
                        edit_admin_product_path(product), :class => 'btn btn-info' %> 
        </div>
      </td>
      <td>
        <div align="center">
          <%= link_to ('<i class="icon-remove icon-white"></i> ').html_safe,
                        admin_product_path(product), 
                        method: :delete, 
                        data: { confirm: t(:'notice.are_you_sure') }, 
                        :class => 'btn btn-danger' %>
        </div>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<div class="form-actions">
  <%= link_to t(:'products.new'), new_admin_product_path, :class => 'btn' %>
</div>