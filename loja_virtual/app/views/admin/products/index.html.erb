<h1><%= t(:'products.list') %> </h1>

<table class="table table-bordered table-hover">
  <thead>
    <th> <%= Product.human_attribute_name(:code) %> </th>
    <th> <%= Product.human_attribute_name(:description) %> </th>
    <th> <%= Product.human_attribute_name(:price) %> </th>
    <th> <%= Product.human_attribute_name(:category) %> </th>
    <th></th>
  </thead>

  <tbody  class="sortable">
  <% @products.each do |product| %>
    <tr>
      <td><%= product.code %></td>
      <td><%= product.description %></td>
      <td><%= number_to_currency(product.price) %></td>
      <td><%= product.category.name %></td>
  
      <td>  
        <%= link_to ('<i class="icon-plus-sign"></i> ').html_safe, # + t(:show)).html_safe, 
                      admin_product_path(product), :class => 'btn' %> 
        &nbsp
        <%= link_to ('<i class="icon-edit icon-white"></i> ').html_safe,# + t(:edit)).html_safe, 
                      edit_admin_product_path(product), :class => 'btn btn-info' %> 
        &nbsp
        <%= link_to ('<i class="icon-remove icon-white"></i> ').html_safe, # + t(:delete)).html_safe, 
                      admin_product_path(product), 
                      method: :delete, 
                      data: { confirm: t(:'notice.are_you_sure') }, 
                      :class => 'btn btn-danger' %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<div class="form-actions">
  <%= link_to t(:'products.new'), new_admin_product_path, :class => 'btn' %>
</div>