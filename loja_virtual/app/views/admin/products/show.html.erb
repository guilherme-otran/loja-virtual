<table class="table table-bordered">
  <thead>
    <th>Code</th>
    <th>Description</th>
    <th>Category</th>
    <th>Price</th>
    <th>Image</th>
  </thead>
  
  <tbody>
    <tr>
      <td> <%= @product.code %> </td>
      <td> <%= @product.description %> </td>
      <td> <%= @product.category.name %> </td>
      <td> <%= @product.price %> </td>
  	  <td> <%= image_tag @product.image_url(:thumb) if @product.image? %> </td>
    </tr>
  </tbody>
</table>

<div class="form-actions">
  <%= link_to 'Edit', edit_admin_product_path(@product), :class => 'btn btn-info' %>
  <%= link_to 'Back', admin_products_path, :class => 'btn' %>
</div>