<div class="header">
  <h1><%= t(:'sales.list') %> </h1>
  
  <!-- FILTER -->
  <div class="form-fields">
    <div class="filter-form"> 
      <%= form_for :search, url: admin_sales_path, method: "GET", html: { id: "admin_search_form", class: "search" } do |f| %>
        <span class="input-append">
        	<span>
        		<p><%= t :'sales.search.date.start' %></p>
          	<%= f.text_field :date_start, :class => "admin-date-search-field" %>
          </span>
          <span>
          	<p><%= t :'sales.search.date.end' %></p>
          	<%= f.text_field :date_end,   :class => "admin-date-search-field" %>
          </span>
          <%= f.submit t(:'search.button_text'), :name => nil, :id => "btn_search", :class => 'btn btn-info' %>
        </span>
      <% end %>
    </div>

    <div class="clear"></div>
  </div>
  <!-- END FILTER -->
  <div class="clear"></div>
</div>

<table class="table table-bordered table-hover">
  <thead>
    <th> <%= Sale.human_attribute_name(:id) %> </th>
    <th> <%= Sale.human_attribute_name(:created_at) %> </th>
    <th> <%= Sale.human_attribute_name(:total_price) %> </th>
    <th> <%= t(:'sales.client') %> </th>
    <th colspan=3></th>
  </thead>

  <tfoot>
    <tr>
      <td colspan="6" class="sales">
        <label class="label-total"> <%= t(:'sales.total_number') %></label>
        <%= total_number(@sales) %>
      </td>
    </tr>
    <tr>
      <td colspan="6" class="sales">
        <label class="label-total"> <%= t(:'sales.total_value') %> </label> 
        <%= number_to_currency(total_value(@sales))%> <br />        
      </td>
    </tr>
  </tfoot>

  <tbody  class="sortable" id="sales">
    <%= render :partial => "admin/sales/index.html" %>
  </tbody>
</table>