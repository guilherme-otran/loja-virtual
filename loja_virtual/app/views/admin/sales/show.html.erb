<table class="table table-bordered">
  <thead>
    <tr> 
      <td class="sale-info" colspan="5"> 
        <label class="sales-label"> Venda ID: </label>
        <%= @sale.id.to_s %> - 
        <label class="sales-label"> Cliente: </label>
        <%= username(@sale.user_id) %>
      </td> 
    </tr>
    <tr> 
      <th class="sale-date" colspan="5"> <%= l(@sale.created_at) %> </th> 
    </tr>
    <tr>
      <th> <%= Product.human_attribute_name(:code) %> </th>
      <th> <%= Product.human_attribute_name(:description) %> </th>
      <th> <%= Product.human_attribute_name(:price) %> </th>
      <th> <%= Product.human_attribute_name(:category) %> </th>
      <th> <%= t(:'sales.quantity') %> </th>
    </tr>
  </thead>

  <tfoot>
    <tr>
      <td colspan="5" class="sales"> 
        <label class="label-total"> <%= Sale.human_attribute_name(:total_price) %> </label>
        <%= number_to_currency(@sale.total_price) %> 
      </td>
    </tr>
  </tfoot>
  
  <tbody>
    <%@sale_items.each do |sale_item| %>
    <tr>
      <td> <%= product_code(sale_item.product_id) %> </td>
      <td> <%= product_description(sale_item.product_id) %> </td>
      <td> <%= number_to_currency(sale_item.product_price) %> </td>
      <td> <%= product_category(sale_item.product_id) %> </td>
      <td> <%= sale_item.quantity %> </td>
	  </tr>
    <% end %>
  </tbody>
</table>

<div class="form-actions">
  <%= link_to t(:back), admin_sales_path, class: 'btn' %>
</div>