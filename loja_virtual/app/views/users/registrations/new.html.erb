<h2>TRANSLATE ME: Sign Up</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name,                  :required => true, :autofocus => true, :label => t('form.caption.name') %>
    <%= f.input :email,                 :required => true,                     :label => t('form.caption.email') %>
    <%= f.input :password,              :required => true,                     :label => t('form.caption.password') %>
    <%= f.input :password_confirmation, :required => true,                     :label => t('form.caption.password_confirmation') %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "TRANSLATE ME: Sign up" %>
  </div>
<% end %>

