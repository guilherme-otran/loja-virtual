<div id="products_and_paginator">
  <div class="categories-links">
    <%= link_to t(:all_categories), root_path, class: "category-link", data: { "ajax-href" => products_path } %>

    <% @categories.each do |category| %>
      <%= link_to category.name, category_path(category, :category_id => category.id), class: "category-link", 
          data: { "ajax-href" => products_category_path(category) } %>
    <% end %>
  </div>
	<div class="products">
	  <% @products.each do |product| %>
	    <div class="span3"> 
	      <div class="image">
	        <%= image_tag product.image_url(:thumb), :class => 'img-polaroid'  if product.image? %>
	      </div>

	      <div>
	        <span class="code"> <%= product.code %> </span> - 
	        <%= product.description %>
	      </div>
      
	      <div>
	        <div class="category">
	          <%= product.category.name %>
	        </div>

	        <div class="price">
	          <%= number_to_currency(product.price) %>
	        </div>
	      </div>

	      <div class="btn-cart">
	        <%= link_to ('<i class="icon-shopping-cart"></i> ' + t(:"products.add_to_cart")).html_safe, 
	          add_to_cart_product_path(product), :class => 'btn-add-to-cart btn btn-info', :data => {id: product.id} %>
	      </div>
	    </div>
	  <% end %>
	</div>
	<%= paginate @products %>
</div>