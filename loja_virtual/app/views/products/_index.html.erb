<%= form_tag root_path, :method => "GET" do %>
  <select name="filter_by">
    <option id="default" selected="selected">Pesquisar por...</option>
    <option id="0">Categoria</option>
    <option id="1">Descrição</option>
  </select>

  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search", :name => nil %>
<% end %>

<div class="products">
  <% @products.each do |product| %>
    <div class="span3"> 
      <div class="image">
        <%= image_tag product.image_url(:thumb), :class => 'img-polaroid'  if product.image? %>
      </div>

      <div>
        <span class="code"> <%= product.code %> </span> - 
        <%= product.description %>
      </div>
      
      <div>
        <div class="category">
          <%= product.category.name %>
        </div>

        <div class="price">
          <%= number_to_currency(product.price) %>
        </div>
      </div>

      <div class="btn-cart">
        <%= link_to ('<i class="icon-shopping-cart"></i> ' + t(:"products.add_to_cart")).html_safe, 
          add_to_cart_product_path(product), :class => 'btn-add-to-cart btn btn-info', :data => {id: product.id} %>
      </div>
    </div>
  <% end %>
</div>
<%= paginate @products %>