<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th> <%= Product.human_attribute_name(:code) %> </th>
      <th> <%= Product.human_attribute_name(:description) %> </th>
      <th> <%= Product.human_attribute_name(:category) %> </th>
      <th> <%= Product.human_attribute_name(:price) %> </th>
      <th> <%= Product.human_attribute_name(:image) %> </th>
      <th></th>
    </tr>
  </thead>
  
  <tbody>
  <% @products.each do |product| %>
    <tr>
      <td><%= product.code %></td>
      <td><%= product.description %></td>
      <td><%= product.category.name %></td>
      <td><%= product.price %></td>
    
      <!-- Shows the product's image if the image exists. -->
      <td> <%= image_tag product.image_url(:thumb) if product.image? %> </td>
    
      <td><%= link_to t(:show), product, :class => 'btn' %></td>    
    </tr>
  <% end %>    
  </tbody>
</table>