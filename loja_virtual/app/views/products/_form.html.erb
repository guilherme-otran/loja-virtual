<%= simple_form_for(@product, :html => {:multipart => true}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :code %>
    <%= f.input :description %>
    <%= f.input :price %>
    <!-- <%= f.input :category %> -->
  </div>

	

  <div class"form-image">
	 <p>
	    <%= f.file_field :image %>
	  </p>
	</div>

	

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
